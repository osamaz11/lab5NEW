
@{
    ViewData["Title"] = "BookBuyDetail";
}

<h1>BookBuyDetail</h1>
@model lab5.Models.book

<dl class="row">
    <dt class="col-sm-2"> Id </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">title </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.title)
    </dd>
    <dt class="col-sm-2"> info</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.info)
    </dd>
    <dt class="col-sm-2">bookquantity</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.bookquantity)
    </dd>
    <dt class="col-sm-2">price </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.price)
    </dd>
    <dt> Pic </dt>
    <dd>
        <img src="~/images/@Model.imgfile" height="150" />
        <br />@Model.imgfile
    </dd>
</dl>
<p style="color:red"> @ViewData["message"]</p>
<form asp-action="cartadd" asp-controller="bookorders">
    <input type="hidden" name="bookId" value=@Model.Id />
    <div class="form-group">
        <label for="quantity" class="control-label">Quantity</label>
        <input name="quantity" class="form-control" id="qu" onchange="gettotal()" />
    </div>
    <div class='alert alert-success' id="tot"> </div>

    <input type="submit" value="Add to Cart" class="btn btn-primary" />
</form>


@section scripts {
    <script>
        function gettotal() {
            tot = 0;

            var q = document.getElementById('qu').value;
            var pr = '@Model.price';
            tot = q * pr;
            if ('@Model.discount' == "yes") {
                tot = (tot * 90) / 100
            }
            document.getElementById("tot").innerHTML = "total  =" + tot;
        }
    </script>
}


